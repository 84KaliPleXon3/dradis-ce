<% field_name = local_assigns[:field] ? field[0]  : '' %>
<% value = local_assigns[:field] ? field[1] : '' %>
<div class="row">
  <div class="col-3">
    <p>Field</p>
    <input type="text" name="field_name_<%= index %>" class="form-control" value="<%= field_name %>">
  </div>
  <div class="col-9">
    <p>Value</p>
    <textarea rows=1 name="field_value_<%= index %>" class="form-control"><%= value %></textarea>
  </div>
</div>
