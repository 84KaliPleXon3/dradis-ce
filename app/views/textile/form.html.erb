<form>
  <% if @form_data.nil? %>
    <div class="row">
      <div class="col-3">
        <p>Field</p>
        <input type="text" name="field_name1" class="form-control">
      </div>
      <div class="col-9">
        <p>Value</p>
        <textarea rows=1 name="field1_value1" class="form-control"></textarea>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
        <p>Field</p>
        <input type="text" name="field_name2" class="form-control">
      </div>
      <div class="col-9">
        <p>Value</p>
        <textarea rows=1 name="field1_value2" class="form-control"></textarea>
      </div>
    </div>
    <button class="btn">Add field</button>
  <% else %>
    <% @form_data.each do |field, value| %>
      <div class="row">
        <div class="col-3">
          <p>Field</p>
          <input type="text" name="field_name1" class="form-control" value="<%= field %>">
        </div>
        <div class="col-9">
          <p>Value</p>
          <textarea rows=1 name="field1_value1" class="form-control"><%= value %></textarea>
        </div>
      </div>
    <% end %>
  <% end %>
</form>
