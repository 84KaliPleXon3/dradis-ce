<input type="hidden" name="form" value="true">
<% if @form_data %>

  <% @form_data.each_with_index do |field, index| %>
    <%= render partial: 'textile/field', locals: { field: field, index: index } %>
  <% end %>
<% else %>
  <%= render partial: 'textile/field', locals: { index: 0 } %>
<% end %>

<%= link_to 'Add field', field_path(index: @form_data.try(:length) || 1), class: 'btn', data: { behavior: 'add-field' }, remote: true %>
